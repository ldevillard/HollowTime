<div style="position: absolute; bottom: 20px; left: 50px; min-width: 200px;">

    <MudCard style="min-height: 15vh; max-height: 10vh; margin-bottom: 3vh">
        <MudCardContent Class="overflow-auto" Style="flex: 1;">
            <MudText Typo="Typo.h4" Style="text-align: center"><b>STATS</b></MudText>
            <br />
            <MudText Typo="Typo.body1">AO5: @getFormatedTime(averageOfFive)</MudText>
            <MudText Typo="Typo.body1">AO12: @getFormatedTime(averageOfTwelve)</MudText>
        </MudCardContent>
    </MudCard>

    <MudCard style="min-height: 60vh; max-height: 60vh" Class="d-flex flex-column">
        <MudCardContent Class="overflow-auto" Style="flex: 1;">

            <MudTable Elevation="0" Items="@currentTimes.OrderByDescending(t => t.SolveIndex)">
                <HeaderContent>
                    <MudTh>#</MudTh>
                    <MudTh>TIME</MudTh>
                    <MudTh>AO5</MudTh>
                    <MudTh>AO12</MudTh>
                </HeaderContent>
                <RowTemplate Context="item">
                    <MudTd>@item.SolveIndex</MudTd>
                    @if (item.SingleTime.BestTime)
                    {
                        <MudTd>
                            <MudText Color="Color.Success">
                                <b>@getFormatedTime(item.SingleTime.Time)</b>
                            </MudText>
                        </MudTd>
                    }
                    else
                    {
                        <MudTd>
                            <MudText Color="Color.Default">
                                @getFormatedTime(item.SingleTime.Time)
                            </MudText>
                        </MudTd>
                    }
                    
                    <MudTd>@getFormatedTime(item.AverageOfFive.Time, true)</MudTd>
                    <MudTd>@getFormatedTime(item.AverageOfTwelve.Time, true)</MudTd>
                </RowTemplate>
            </MudTable>

        </MudCardContent>
    </MudCard>
</div>