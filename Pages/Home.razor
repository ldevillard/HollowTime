@page "/"
@inject IJSRuntime JS

<PageTitle>Hollow Time</PageTitle>

<MudGrid style="height: 90vh; width: 100%; position: relative; outline: none;" tabindex="0" @onkeydown="onKeyDown" @onkeyup="onKeyUp">
    <!-- Scramble -->
    <MudItem Class="position-absolute d-flex align-center justify-center mud-width-full" xs="12">
        <MudText Typo="Typo.h4"><b>@currentScramble</b></MudText>
        <scramble-display visualization="3D" scramble="@currentScramble"></scramble-display>
    </MudItem>
    <!-- Timer -->
    <MudItem Class="d-flex align-center justify-center mud-width-full" xs="12">
        <MudContainer MaxWidth="MaxWidth.Small" Class="display: flex;">
            <HollowTime.Components.Timer @ref="timer"/>
        </MudContainer>
    </MudItem>

     <!-- Time Stats -->
    <HollowTime.Components.TimeStats @ref="currentStats"/>
</MudGrid>